# Configuration locale pour VINA
# Copiez ce fichier vers .env et complétez les valeurs

# URL de la base de données MySQL
# Format: mysql://user:password@localhost:3306/vina
DATABASE_URL=mysql://root:password@localhost:3306/vina

# Secret pour les cookies JWT
JWT_SECRET=votre-secret-jwt-a-changer

# URL de l'application
APP_URL=http://localhost:3000


# Firebase Configuration (required for Google OAuth)
# Get these values from Firebase Console > Project Settings
VITE_FIREBASE_API_KEY=your-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
VITE_FIREBASE_APP_ID=your-app-id
